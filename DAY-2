#DATA TYPES
#Subscript and Type conversion

two_digit_number = input("Type a two digit number: ")

a=int(two_digit_number[0])
b=int(two_digit_number[1])
two_digit_number=a+b
print(two_digit_number)



#Mathematical Operations


height = input("enter your height in m: ")
weight = input("enter your weight in kg: ")

b=float(weight)
a=float(height)

bmi=int(b/(a*a))
print(bmi)




#LIFE IN WEEKS


age = input("What is your current age? ")



years= 90 - int(age)
days=round(years*365)
weeks=round(years*52)
months=round(years*12)
print(f"You have{days} days, {weeks} weeks , and {months} months left")




#PROJECT


#If the bill was $150.00, split between 5 people, with 12% tip. 

#Each person should pay (150.00 / 5) * 1.12 = 33.6
#Format the result to 2 decimal places = 33.60


print("Welcome to the tip calculator")
bill= float(input("Total bill $ "))
people= int(input("Number of people "))
tip= int(input("how much tip would you like to give? 10, 12, 15 ?"))
tip_cal= tip / 100
tip_as_percent= bill*tip_cal
bil_tip= bill + tip_as_percent
contri= bil_tip / people
final_amount= round(contri, 3)
final_amount= "{:2f}".format(contri)
print(f"each people should pay $ : {final_amount}")



